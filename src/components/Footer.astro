---
import Hr from "./Hr.astro";
import Socials from "./Socials.astro";
import NewsletterForm from "./NewsletterForm.astro";

export interface Props {
  noMarginTop?: boolean;
}

const { noMarginTop = false } = Astro.props;
---

<footer class:list={["w-full", { "mt-auto": !noMarginTop }]}>
  <div class="my-8">
    <h3 class="text-lg font-semibold mb-2 text-center">Stay in the loop</h3>
    <NewsletterForm variant="compact" />
  </div>
  <Hr noPadding />
  <div
    class="flex flex-col items-center justify-between py-6 sm:flex-row-reverse sm:py-4"
  >
    <Socials centered />
    <div class="my-2 flex flex-col items-center whitespace-nowrap sm:flex-row">
      <a href="https://github.com/robmiller87/robertmillerconsultancy.com" target="_blank" rel="noopener noreferrer" class="hover:text-accent">
        CC BY 4.0 Â· Code MIT
      </a>
    </div>
  </div>
</footer>
